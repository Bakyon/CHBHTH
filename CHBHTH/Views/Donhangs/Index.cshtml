@model IEnumerable<CHBHTH.Models.DonHang>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml"; }

<center>
    <h2>Orders</h2>


    <table class="table">
        <tr>
            <th>
                Full name:
            </th>
            <th>
                Order date
            </th>
            <th>
                Order status
            </th>
            <th>
                Payment
            </th>
            <th>
                Total
            </th>
            <th>
                Delivery address
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @{ if (@item.TinhTrang == 0)
                        {
                            <h5 style="color:red">Waiting for confirmation... </h5>
                        }
                        else if (@item.TinhTrang == 1)
                        {
                            <h5 style="color:green">Order confirmed! </h5>
                        }
                        else
                        {
                            <h5 style="color:orangered">Waiting for confirmation... </h5>
                        }
                    }
                </td>
                <td>
                    @{ if (@item.ThanhToan == 1)
                        {
                            <div style="color:red">Cash on delivery</div>
                        }
                        else if (@item.ThanhToan == 2)
                        {
                            <div style="color:brown">Banking</div> }
                    }
                </td>
                <td>
                    @String.Format("{0:0,0}", item.TongTien) VNĐ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
                </td>
                <td>
                    <button class="btn btn-info">
                        @Html.ActionLink("Details", "Details", new { id = item.MaDon }, new { @style = "color:white;" })
                    </button>

                </td>
            </tr>
        }

    </table>
</center>