@model CHBHTH.Models.DonHang

@{
    ViewBag.Title = "ThanhToanDonHang";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}

<center>
    <h2>Payment</h2>

    @using (Html.BeginForm("DatHang", "GioHang", new { @class = "" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDon)

    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Orderer  </b></div>
        <div class="col-md-9">
            @Html.DropDownList("MaNguoidung", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly", Enabled = "False", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Order date</b></div>
        <div class="col-md-9">
            @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Total payment  </b></div>

        <div class="col-md-9">
            <h3 class="text-danger"> @String.Format("{0:0,0}", @ViewBag.tongtien) VNĐ </h3>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Delivery address</b></div>
        <div class="col-md-9">
            @Html.EditorFor(model => model.DiaChiNhanHang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChiNhanHang, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Payment method  </b></div>

        <div class="col-md-9">
            @Html.DropDownList("MaTT", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="control-label col-md-3 Bold"> <b> 	Note  </b></div>

        <div class="col-md-9 text-danger">
            - For Cash on delivery: Please double check the products on delivery before payment.
            <br />
            - For Banking:
            Please complete the transaction to the bank account to confirm your order : 111111. Owner: Aleky. Bank: Vietinbank
            <br />
            - Referance: Fullname , Tel. number, Aleky shop banking
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Order NOW!" class="btn btn-primary" />
        </div>
    </div> <br />
</div>
    }
</center>
