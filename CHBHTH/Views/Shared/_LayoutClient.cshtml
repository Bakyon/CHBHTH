<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="/Home/css/styles.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{ var u = Session["use"] as CHBHTH.Models.TaiKhoan; }
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Aleky Toy Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"> </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </li>
                    <li class="nav-item mx-0 mx-lg-1 dropdown">@Html.ActionLink("Products", "index", "sanpham", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </li>
       
                    
                    <li class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("News", "index", "tintuc", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </li>
                    <li class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </li>              
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-0 mx-lg-1">  @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" }) </li>
                </ul>

                <ul class="navbar-nav ms-auto ">
                    @{ if (u != null)
                        {
                            <li class="nav-item mx-0 mx-lg-1">
                                <a style="color:white" href="@Url.Action("Profile", "User", new { id = u.MaNguoiDung  })"> Hi, @u.Email</a>
                                <br />
                                <a style="color:red" href="/User/DangXuat"> Logout</a>
                            </li>

                        }
                        else
                        {
                            <td class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("Login", "Dangnhap", "User", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </td>

                        } }
                </ul>
            </div>
      </div>
            </nav>
            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>

        <!-- Footer-->
        <footer class="text-bg-success" style="padding-left:50px">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <h2>Policies</h2>
                    <span>Buying policy</span>
                    <br />
                    <span>Exchanging policy</span>
                    <br />
                    <span>Customer policy</span>
                    <br />
                    <span>Delivery policy</span>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h2>Links</h2>
                    <span>News</span>
                    <br />
                    <span>Application</span>
                    <br />
                    <span>Guide</span>
                    <br />
                    <span>FAQ</span>


                </div>
                <div class="col-md-3 col-sm-6">
                    <h2>Contact</h2>
                    <span>About us</span>
                    <br />
                    <span>Contact</span>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h2>Follow us on</h2>
                    <a class="btn btn-outline-light btn-social mx-1" href="https://www.facebook.com/kyo.kenji.5/"><i class="fab fa-fw fa-facebook-f"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-linkedin-in"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-dribbble"></i></a>

                </div>
            </div>
            <hr />
            <!-- Copyright Section-->
            <div class="copyright py-4 text-center text-white">
                <div class="container"><small>Copyright &copy; Aleky Toy Shop</small></div>
            </div>
        </footer>

        <script src="~/Content/ckeditor/ckfinder/ckfinder.js"></script>

        <script src="~/Content/ckeditor/ckeditor.js"></script>

        <script src="~/Content/ckeditor/adapters/jquery.js"></script>


        <script>
        </script>

        @RenderSection("DoanJS", false)
    </html>
